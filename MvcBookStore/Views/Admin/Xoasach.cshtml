@model MvcBookStore.Models.Sach

@{
    ViewBag.Title = "Xoasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Sách:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>
        <dt>
            Giá Bán:
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.GiaBan) VND
        </dd>
        <dt>
            Mô Tả:
        </dt>
        <dd style="width:600px;text-align:justify">
            @Html.Raw(Model.MoTa)
        </dd>
        <dt>
            Ảnh Bìa:
        </dt>
        <dd>
            <img src="@Url.Content("~/product_imgs/"+Model.AnhBia)" width="120px" />
        </dd>
        <dt>
            Ngày Cập Nhật:
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat) VND
        </dd>
        <dt>
            Số Lượng Tồn:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        <dt>
            Chủ Đề:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaCD)
        </dd>
        <dt>
            Nhà Xuất Bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaNXB)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ", "Sach")
        </div>
    }
</div>
